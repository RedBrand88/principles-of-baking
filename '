import "./validationError.css";

type ValidationErrorProps = {
  errors: string[] | null;
};

const ValidationError = ({ errors }: ValidationErrorProps) => {
  if (errors) {
    return (
      <p className="errorText">
        <ol>
          {errors.map(error => {
            return (
              <li>
                {error}
              </li>
            )
          })}
        </ol>
      </p>
    );
  } else {
    return null
  }
};

export default ValidationError;
